{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Debug Pathplanner",
      "command": "make", // Use make to compile
      "args": [
        "-fcolor-diagnostics", // Enable colored diagnostics (optional)
        "-g" // Include debug symbols
      ],
      "options": {
        "cwd": "${fileDirname}" // Make sure the task is run in the file's directory
      },
      "problemMatcher": [
        "$gcc" // Using gcc's problem matcher for syntax errors
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
